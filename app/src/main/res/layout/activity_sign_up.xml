<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#B9FF9800"
    tools:context=".MainActivity">

    <EditText
        android:textColorHint="#857B7B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUpEmailEditTextId"
        android:hint="Email"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#090808"
        />

    <EditText
        android:padding="20dp"
        android:textColorHint="#857B7B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUpPasswordEditTextId"
        android:hint="Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#090808"
        android:inputType="textPassword"
        />

    <EditText
        android:padding="20dp"
        android:textColorHint="#857B7B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUpNameEditTextId"
        android:hint="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#090808"

        />
    <EditText
        android:padding="20dp"
        android:textColorHint="#857B7B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUpRollEditTextId"
        android:hint="Roll"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#090808"

        />
    <Spinner
        android:padding="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/statusSpinnerId"
        android:hint="Status"
        android:textColor="#090808"

        />



    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IncheckBox"
        android:text="Show Password"
        />

    <Button
        android:layout_marginTop="20dp"
        android:text="Sign Up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUpButtonId"
        style="@style/Base.Widget.AppCompat.Button.Colored"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:id="@+id/signInTextViewId"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="Go to Sign In"

        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/progressbarId"
        />



</LinearLayout>